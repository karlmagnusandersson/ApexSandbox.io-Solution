public void createCourseAndClass(String name, String description) {
    apxio__Course__c myCourse = New apxio__Course__c(Name = name, apxio__Course_Details__c = description);
    insert myCourse;



    apxio__Class__c myClass = New apxio__Class__c(apxio__Course__c = myCourse.Id, Name = name);

    String truncatedDescription = description.substring(0, 255);

    myClass.apxio__Description__c = truncatedDescription;

    insert myClass;




    // code here
}