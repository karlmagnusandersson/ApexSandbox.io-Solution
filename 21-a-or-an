public String aOrAn(String word) {
    Set<String> vowels = new Set<String>{'a', 'e', 'i', 'o', 'u'};
    String firstChar = word.substring(0, 1);
    Boolean a = vowels.contains(firstChar);

   if (a) {
        return 'an ' + word;
    }
    else {
        return 'a ' + word;
    }
 
    //code here
}