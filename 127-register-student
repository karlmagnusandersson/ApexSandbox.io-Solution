public String registerStudent(String name, String phone, String email) {
    apxio__Student__c studentForInsert = new apxio__Student__c();
    studentForInsert.Name = name;
    studentForInsert.apxio__Phone__c = phone;
    studentForInsert.apxio__Email__c = email;

    insert studentForInsert;
    apxio__Student__c recordAfterInsert = [SELECT apxio__Student__c WHERE id = :studentForInsert.id];
    return recordAfterInsert.apxio__Registration_Number__c;

    // code here
}